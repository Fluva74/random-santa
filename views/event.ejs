<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="mt-4">Random Santa</h1>
            <h2 class="text-center mb-3">Exchange Event</h2>
            <p class="lead mb-3">Welcome</p>
            <form action="/users/event" method="POST">
                <div class="form-group">
                    <label for="name">What is the name of your exchange event?</label>
                    <input type="event" id="event" name="event" class="form-control" placeholder="Event Name" value="<%= typeof event != 'undefined' ? event : '' %>" />
                </div>

                <div class="form-group">
                    <label for="date">What is the date the your exchange will take place?</label
          >
          <input
            type="date"
            id="date"
            name="date"
            class="form-control"
            placeholder="Enter date"
            value="<%= typeof date != 'undefined' ? date : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="time">What time will your exchange take place?</label>
                    <input type="time" id="time" name="time" class="form-control" placeholder="Enter Time" value="<%= typeof time != 'undefined' ? time : '' %>" />
                </div>
                <div class="form-group">
                    <label for="price">What is the suggested price limit for your exchange?</label
          >
          <input
            type="price"
            id="price"
            name="price"
            class="form-control"
            placeholder="Enter price"
            value="<%= typeof price != 'undefined' ? price : '' %>"
          />
        </div>
        <br />
        <button
          type="submit"
          class="btn btn-primary btn-block"
          href="/users/exchange"
        >
          Create Exchange
        </button>
      </form>
      <br />

      <a href="/users/logout" class="btn btn-secondary">Logout</a>
    </div>
  </div>
</div>
